<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView

            android:id="@+id/back_to_login"
            android:textSize="40dp"

            android:layout_width="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"

            >

        </TextView>
        <TextView
            android:id="@+id/qwe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_below="@+id/back_to_login"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/uq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/qwe"
            >


            <EditText
                android:id="@+id/username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" User Name"
                android:drawableLeft="@drawable/ic_username_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_below="@id/qwe"
                android:singleLine="true"

                android:textSize="20dp"

                android:layout_marginTop="45dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_below="@+id/uq">


            <EditText
                android:id="@+id/Email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Email"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:singleLine="true"

                android:textSize="20dp"

                android:layout_marginTop="45dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phonenum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_below="@+id/emailw">


            <EditText
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="  Phone Number"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:singleLine="true"

                android:textSize="20dp"

                android:layout_marginTop="45dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ppp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"

            android:layout_below="@+id/phonenum"
            >
            <EditText
                android:id="@+id/password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Password"
                android:textSize="20dp"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:singleLine="true"
                android:password="true"
                android:layout_marginTop="45dp"
                />




        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/ppp"
            >



            <EditText
                android:id="@+id/Confirm_pass"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Confirm Password"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:singleLine="true"

                android:textSize="20dp"

                android:layout_marginTop="45dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/aftersignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login"
            android:layout_below="@id/cp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:text="Continue"
            android:drawableRight="@drawable/ic_trending_flat_black_24dp"
            >
        </Button>
    </RelativeLayout>
</ScrollView>